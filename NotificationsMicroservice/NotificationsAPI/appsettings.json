{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "JwtConfig": {
    "SecretKey": "secretkey256supersecretkey256key", //32 chars - minimum
    "Issuer": "my-issuer",
    "Audience": "my-audience",
    "TokenExpirationMinutes": 30,
    "RefreshTokenExpirationMinutes": 10080 // 7 days
  },
  "Caching": {
    "Cache": {
      "CacheExpirationSeconds": 150 // 2.5 minutes
    },
    "RedisServerConfig": {
      "ConnectionString": "RedisServer", // -> Working only in the internal docker network
      "CachePrefix": "NotificationsAPI_"
    }
  },
  "KafkaServerConfig": {
    "BootstrapServers": "KafkaServer:29092",
    "GroupId": "api-notification-consumer-group",
    "Topics": {
      "EventStub": "stub-event"
    }
  },
  "AllowedHosts": "*"
}
