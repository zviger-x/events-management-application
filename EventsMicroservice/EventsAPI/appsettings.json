{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "MongoServerConfig": {
    "ConnectionString": "mongodb://root:rootpassword@EventsAPI_MongoServer/admin?authSource=admin",
    "DatabaseName": "eventsdb"
  },
  "JwtConfig": {
    "SecretKey": "secretkey256supersecretkey256key", //32 chars - minimum
    "Issuer": "my-issuer",
    "Audience": "my-audience",
    "TokenExpirationMinutes": 30,
    "RefreshTokenExpirationMinutes": 10080 // 7 days
  },
  "Caching": {
    "Cache": {
      "CacheExpirationSeconds": 150 // 2.5 minutes
    },
    "RedisServerConfig": {
      "ConnectionString": "RedisServer", // -> Working only in the internal docker network
      "CachePrefix": "EventsAPI_"
    }
  },
  "AllowedHosts": "*"
}
