{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "MongoServerConfig": {
    // Authorization is completely disabled. The Mongo server will reject the request if it sees an attempt to authorize.
    // "ConnectionString": "mongodb://root:rootpassword@MongoServer/?authSource=admin",
    "ConnectionString": "mongodb://MongoServer/",
    "DatabaseName": "eventsdb"
  },
  "Jwt": {
    "SecretKey": "secretkey256supersecretkey256key", //32 chars - minimum
    "Issuer": "my-issuer",
    "Audience": "my-audience",
    "TokenExpirationMinutes": 30,
    "RefreshTokenExpirationMinutes": 10080 // 7 days
  },
  "AllowedHosts": "*"
}
