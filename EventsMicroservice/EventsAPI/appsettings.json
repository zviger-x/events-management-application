{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "MongoServerConfig": {
    "ConnectionString": "mongodb://root:rootpassword@EventsAPI_MongoServer/admin?authSource=admin",
    "DatabaseName": "eventsdb"
  },
  "JwtConfig": {
    "SecretKey": "secretkey256supersecretkey256key", //32 chars - minimum
    "Issuer": "my-issuer",
    "Audience": "my-audience",
    "TokenExpirationMinutes": 30,
    "RefreshTokenExpirationMinutes": 10080 // 7 days
  },
  "Caching": {
    "Cache": {
      "CacheExpirationSeconds": 150 // 2.5 minutes
    },
    "RedisServerConfig": {
      "ConnectionString": "EventsAPI_RedisServer", // -> Working only in the internal docker network
      "CachePrefix": "EventsAPI_"
    }
  },
  "HangfireConfig": {
    "ConnectionString": "Server=EventsAPI_SQLServer; Database=master; User Id=sa; Password=SA_passw0rd; TrustServerCertificate=True;",
    // Задачи
    "NotifyCompletedEventsJob": {
      "Name": "notify-completed-events-hourly-job",
      "Cron": "0 * * * *" // каждый час
    },
    "NotifyUpcomingEventsJob": {
      "Name": "notify-upcoming-events-daily-job",
      "Cron": "0 0 * * *" // каждый день
    }
  },
  "AllowedHosts": "*"
}
